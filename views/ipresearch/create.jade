          mixin text("TrunkPort", ipresearch.TrunkPort)
          mixin errorMessage(ipresearch, 'TrunkPort')

    .form-actions
      a.btn.btn-warning(href="/ipresearches") Back
      | 
      input.btn.btn-primary(type="submit", value="Create")
