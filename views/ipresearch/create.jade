extends ../layout
include ../mixins/form-helpers

block content

  form#ipresearch-form.form-horizontal(action="/ipresearches/create", method="POST")
    fieldset
      legend Create a new Ipresearch
    
      .control-group
        mixin label("ifIndex", "Ifindex")        
        .controls
          mixin text("ifIndex", ipresearch.ifIndex)
          mixin errorMessage(ipresearch, 'ifIndex')
